# Boswell AI Research Interviewer - Environment Variables
# Copy this file to .env and fill in your values
#
# Required for: Web server, Voice worker, and local development

# =============================================================================
# Database Configuration
# =============================================================================
# PostgreSQL connection string (asyncpg format for async SQLAlchemy)
# For local dev with docker-compose, this is overridden automatically
DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/boswell

# =============================================================================
# API Keys (Required)
# =============================================================================

# Anthropic Claude API key
# Get yours at: https://console.anthropic.com/
CLAUDE_API_KEY=

# Daily.co API key for video/audio rooms
# Get yours at: https://dashboard.daily.co/
DAILY_API_KEY=

# Deepgram API key for speech-to-text
# Get yours at: https://deepgram.com/
DEEPGRAM_API_KEY=

# ElevenLabs API key for text-to-speech
# Get yours at: https://elevenlabs.io/
ELEVENLABS_API_KEY=

# Resend API key for email delivery
# Get yours at: https://resend.com/
RESEND_API_KEY=

# =============================================================================
# Application Configuration
# =============================================================================

# Secret key for session signing and CSRF protection
# Generate with: python -c "import secrets; print(secrets.token_hex(32))"
# REQUIRED in production environments
SECRET_KEY=

# Base URL for the application (used in email links)
# Examples: http://localhost:8000, https://boswell.example.com
BASE_URL=http://localhost:8000

# Admin credentials (for initial login)
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=

# =============================================================================
# Production Database (docker-compose.prod.yml)
# =============================================================================
# These are only needed for production deployments

POSTGRES_USER=boswell
POSTGRES_PASSWORD=
POSTGRES_DB=boswell

# =============================================================================
# Server Configuration
# =============================================================================

# Port for the web server (default: 8000)
PORT=8000

# =============================================================================
# Optional: Legacy/CLI Configuration
# =============================================================================

# MeetingBaaS API key (legacy - use Daily.co instead)
# MEETINGBAAS_API_KEY=

# Default interview time limits (CLI usage)
# BOSWELL_DEFAULT_TARGET_TIME=30
# BOSWELL_DEFAULT_MAX_TIME=45
